<h1 align="center">Log in</h1>

<!-- login does not hit the data. 
    It is not a model backed form
    it simply creates the form, submits, then deletes-->
    
    <!-- :session refers to session controller | url: login_path refers to the path, the form will post to login_path-->

<%= form_for( :session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :email %>
        </div>
        
        <div class="col-sm-8">
            <%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Enter Email" %>
        </div>
    </div>
    
    
    

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%=  f.label :password %>
        </div>
        
         <div class="col-sm-8">
            <%=  f.password_field :password, class: "form-control", placeholder: "Enter email" %>
        </div>
    </div>
    
      
    
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            
            <!-- Since both new and edit share this form, this checks on submit if the user is a new user, 
                    if true, it says signup,if not it says updates your account -->
             <%= f.submit "Log in" , class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
    
    
   
<% end %>
