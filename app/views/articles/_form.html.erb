
<!-- obj: @article sets the obj to the article instance variable from the _errors partial in shared-->
<%= render 'shared/errors', obj: @article  %>


<!-- ARTICLE FORM-->
<div class="row">
    
<div class="col-md-12">
    
<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :title %>
        </div>
        
        <div class="col-sm-8">
            <%= f.text_field :title, rows: 10, class: "form-control", placeholder: "Enter title" %>
        </div>
    </div>
    
    

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%=  f.label :description %>
        </div>
        
         <div class="col-sm-8">
            <%=  f.text_area :description, rows:10, class: "form-control", placeholder: "Enter Body of article" %>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
                <div class="col-sm-offset-2 col-sm-8">
                     <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                             <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text }  %>
                     <% end %>
                </div>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
             <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
   

<% end %>
<!-- END ARTICLE FORM-->
<div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Cancel Request and Return to listings", articles_path %> ]
</div>
</div>
</div>