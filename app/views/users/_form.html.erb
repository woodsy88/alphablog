

<!-- obj: @user sets the obj to the article instance variable from the _errors partial in shared-->
<%= render 'shared/errors', obj: @user  %>


<!-- ARTICLE FORM-->
<div class="row">
    
<div class="col-md-12">
    
<%= form_for( @user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :username %>
        </div>
        
        <div class="col-sm-8">
            <%= f.text_field :username, rows: 10, class: "form-control", placeholder: "Enter username" %>
        </div>
    </div>
    

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%=  f.label :email %>
        </div>
        
         <div class="col-sm-8">
            <%=  f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
    </div>
    
      <div class="form-group">
        <div class="control-label col-sm-2">
            <%=  f.label :password %>
        </div>
        
         <div class="col-sm-8">
            <%=  f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            
            <!-- Since both new and edit share this form, this checks on submit if the user is a new user, 
                    if true, it says signup,if not it says updates your account -->
             <%= f.submit(@user.new_record? ? "Sign up" :  "Update Your Account" , class: 'btn btn-primary btn-lg') %>
        </div>
    </div>
   
<% end %>
<!-- END ARTICLE FORM-->
<div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Cancel Request and Return to listings", articles_path %> ]
</div>
</div>
</div>